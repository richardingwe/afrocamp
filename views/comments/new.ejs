<%- include ("../partials/header") %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Add A New Comment To <%= campground.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder=comment required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-block btn-lg btn btn-primary">Submit</button>
                </div>
            </form>
            <a href="/<%= campground._id %> ">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>