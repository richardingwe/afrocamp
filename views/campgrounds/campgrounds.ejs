<%- include ("../partials/header") %>


<div class="bgimg">
	<div class="w3-container text-center w3-text-white w3-animate-top">
		<header class="">
			<div class="container">
				<h1 class="w3-jumbo">Welcome To AfroCamp!</h1>
				<hr class="w3-border-grey" style="margin:auto;width:40%">
				<p>
				view our camps from all over the world
				</p>
				<p>
				  <a class="w3-btn w3-red btn-large" href="/new">Add New Campgrounds</a>
				</p>
			</div>
		</header>

		<div class="row">
			<div class="col-lg-12">
				<h3>Our Most Popular Campgrounds</h3>
				<hr class="w3-border-grey" style="margin:auto;width:40%">
				<br>
			</div>
		</div>
	</div>

	<div class="w3-row-padding text-center">

			<% campgrounds.forEach(function(campground){ %>
					<div class="w3-third w3-margin-top">
						<div class="w3-card w3-animate-left w3-hover-opacity w3-blue">
							<a href="/<%= campground._id %>">
							<img src= "<%= campground.image %>" style="width:100%">
							<div class="w3-container w3-text-white" >
								<h4><%= campground.name %></h4>
							</div>
							</a>
						</div>
					</div>
			<% }); %>
	
	</div>
</div>
<%- include ("../partials/footer") %>