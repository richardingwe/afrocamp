<%- include ("../partials/header") %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Edit comment </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %> " >
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-block btn-sm btn btn-primary">Submit</button>
                </div>
            </form>
            <form id="delete-form" action="/<%= campground_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
				<input type="submit" class="btn btn-danger btn-sm btn-block" value="Delete">
			</form>
            <a href="/<%= campground_id %> ">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>